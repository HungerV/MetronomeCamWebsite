<svg width="300" height="650" xmlns="http://www.w3.org/2000/svg">
  <!-- Phone Frame -->
  <rect x="0" y="0" width="300" height="650" rx="30" fill="#1a1a1a"/>
  <rect x="10" y="10" width="280" height="630" rx="25" fill="#ffffff"/>
  
  <!-- Status Bar -->
  <rect x="20" y="20" width="260" height="30" fill="#f5f5f5"/>
  <text x="30" y="40" font-family="Arial" font-size="12" fill="#333">9:41</text>
  <circle cx="250" cy="35" r="8" fill="#ff0000"/>
  
  <!-- App Header -->
  <rect x="20" y="60" width="260" height="60" fill="#FFCD00"/>
  <text x="150" y="95" font-family="Arial" font-size="20" font-weight="bold" fill="#000" text-anchor="middle">录制中...</text>
  
  <!-- Video Preview -->
  <rect x="30" y="140" width="240" height="320" rx="15" fill="#1a1a1a"/>
  <rect x="40" y="150" width="220" height="300" rx="10" fill="#333"/>
  <text x="150" y="290" font-family="Arial" font-size="72" text-anchor="middle">📹</text>
  
  <!-- Recording Timer -->
  <rect x="100" y="180" width="100" height="40" rx="20" fill="#ff0000" opacity="0.9"/>
  <text x="150" y="207" font-family="Arial" font-size="18" font-weight="bold" fill="#fff" text-anchor="middle">00:45</text>
  
  <!-- Metronome Indicator -->
  <circle cx="150" cy="380" r="30" fill="#FFCD00" opacity="0.8"/>
  <text x="150" y="390" font-family="Arial" font-size="24" text-anchor="middle">♪</text>
  
  <!-- Control Buttons -->
  <circle cx="150" cy="520" r="35" fill="#ff0000"/>
  <rect x="140" y="510" width="20" height="20" fill="#fff"/>
  
  <!-- Bottom Info -->
  <text x="150" y="580" font-family="Arial" font-size="14" fill="#666" text-anchor="middle">录像功能</text>
  <text x="150" y="600" font-family="Arial" font-size="12" fill="#999" text-anchor="middle">同步记录练习过程</text>
</svg>